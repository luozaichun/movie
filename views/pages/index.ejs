<body>
<!--顶部 header-->
<div class="header">
    <div class="header-c">
        <div class="logo"><a href="" title=""></a></div>
        <div class="nav">
            <ul class="clearfix">
                <li class="on"><a href="">资源<span>RESOURCES</span></a><i class="line"></i><i class="dian"></i></li>
                <li class=""><a href="">资讯<span>NEWS</span></a><i class="line"></i><i class="dian"></i></li>
                <li class=""><a href="">专题<span>COLUMN</span></a><i class="line"></i><i class="dian"></i></li>
                <li class=""><a href="">视频<span>VIDEO</span></a><i class="line"></i></li>
            </ul>
        </div>
        <form class="search-box">
            <input class="search " type="text"  value="商品搜索" onfocus="if (value =='商品搜索'){value =''}" onblur="if (value ==''){value='商品搜索'}">
            <input class="search-ico " type="submit" value="">
        </form>
    </div>
</div>
<!--广告位-->
<div class="ad-box-2">
    <a href=""><div class="ad-2"></div></a>
</div>
<div class="mod-download">
    <div class="wrap clearfix">

        <div class="d-tab">
            <ul class="dtab-nav clearfix" id="dtab-nav">
                <li class="active">
                    <a href="" ><i class="gx"></i>最新更新</a>
                </li>
                <li class="">
                    <a href="" ><i class="rm"></i>人气热门</a>
                </li>
            </ul>
            <div class="dtab-container" id="dtab-container">
                <div class="tab">
                    <ul class="down-list clearfix">
                    <% movies.forEach(function (item) {%>
                        <li>
                            <a href="/movie/<%=item._id%>">
                                <div class="item">
                                    <img src="<%=item.poster%>">
                                    <div class="mark"></div>
                                    <p class="item-name ell"><%=item.title%></p>
                                    <p class="item-text">
                                        <em>
                                            <i class="ico-1"></i>
                                            <i class="ico-2"></i>
                                        </em>

                                    </p>
                                    <p class="item-score">
                                        <i class="ico-3"></i>
                                        <%=item.play_num%>次播放
                                    </p>
                                    <p class="actor">主演：<%=item.actor%></p>
                                </div>
                            </a>
                        </li>
                    <% }) %>

                    </ul>
                    <div class="paging">
