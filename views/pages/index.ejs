                                ...
                            </li>

                            <li>
                                <a href="" class="page-num">12</a>
                            </li>

                        </ul>
                    </div>
                </div>
                <div class="tab">
                    <ul class="down-list clearfix">
                        <% movies.forEach(function (item) {%>
                        <li>
                            <a href="/movie/<%=item._id%>">
